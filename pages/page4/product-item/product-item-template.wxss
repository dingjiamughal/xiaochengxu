.product-list {
    float: left;
    padding:0 40rpx;
    border-top:1px solid #bebebe;
    position: relative;
}
.product-title {
    width:100%;
    text-align: center;
    font-size: 16px;
    margin:37rpx 0 20rpx 0;
    letter-spacing: 1px;
}
.product-img {
    float:left;
    width:280rpx;
    height:296rpx;
    text-align: center;
  display:table-cell;
  font-size:268rpx;
  vertical-align:middle;
}
.product-img image {
    max-width: 100%;
    max-height:100%;
    vertical-align: middle;
}
.product-info {
    float:right;
    width:calc(100% - 300rpx);
}

.product-btn .btnAppointment {
    margin:22rpx auto 35rpx;
    width:266rpx;
    height:92rpx;
    line-height: 79rpx;
    text-align: center;
    background: url("../../image/page4-btn.png");
    background-position: center;
background-repeat: no-repeat;
background-size: cover;
}